{
  "name": "simplemdb/simplemdb",
  "description": "Enterprise Database Toolkit for PHP - Modern schema management, intelligent migrations, and advanced query building",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Imran Saadullah",
      "email": "imransaadullah@websitebeaver.com"
    }
  ],
  "homepage": "https://github.com/imrnansaadullah/SimpleMDB",
  "require": {
    "php": ">=8.0",
    "ext-mysqli": "*",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "psr/log": "^1.0||^2.0||^3.0",
    "psr/event-dispatcher": "^1.0"
  },
  "suggest": {
    "ext-pdo_mysql": "For MySQL database support via PDO",
    "ext-pdo_pgsql": "For PostgreSQL database support via PDO"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5|^10.0|^11.0",
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^1.0",
    "vimeo/psalm": "^4.0|^5.0"
  },
  "autoload": {
    "psr-4": {
      "SimpleMDB\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleMDB\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs src tests",
    "cs-fix": "phpcbf src tests",
    "static-analysis": [
      "phpstan analyse src tests",
      "psalm"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "mysql",
    "mysqli",
    "postgresql",
    "postgres",
    "pgsql",
    "pdo",
    "database",
    "multi-database",
    "query builder",
    "orm",
    "schema builder",
    "migrations",
    "enterprise",
    "intelligent migrations",
    "data types",
    "column modifiers",
    "batch operations",
    "query profiler",
    "query debugger",
    "connection pooling",
    "caching",
    "security",
    "polymorphic",
    "modern php",
    "uuid",
    "ulid",
    "ip address",
    "mac address",
    "enterprise database",
    "laravel alternative",
    "database agnostic"
  ]
}